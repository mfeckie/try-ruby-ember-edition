<h1>Let's Learn Ruby!</h1>
<div class="row">
    <div class="large-4 columns">
        <div class="panel">
            <h3 id="lesson_title">{{model.lessonTitle}}</h3>
            {{markdown-to-html markdown=model.lessonBody}}
            {{#link-to 'lessons.edit' model class='button tiny'}}Edit lesson{{/link-to}}
        </div>
    </div>
    <div class="large-8 columns">
        <div class="row">
          <div class="large-12 columns">
            {{ivy-codemirror value=model.lessonCode theme="lesser-dark" mode="ruby" }}
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            {{code-evaluator code=model.lessonCode}}
          </div>
        </div>
    </div>
</div>
